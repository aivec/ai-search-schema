/package.json
/package-lock.json
/composer.json
/composer.lock
/bundle
/node_modules
/.git
/.github

# Build configuration
/gulpfile.js
/phpcs.xml
/phpunit.xml.dist
.distignore
.gitignore
.phpunit.result.cache

# Environment and temp files
*.env
*.env.*
*.log
*.map
.DS_Store
Thumbs.db
*.zip
*.tar.gz
*.tgz
